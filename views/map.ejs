<!DOCTYPE html>
<html>
  <head>
    <title>Map</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles/map.css" type="text/css"/>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/map.js"></script>
    <!-- <script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script> -->
    <!-- <script type="text/javascript" src="/scripts/marker-form.js"></script> -->
    <script type="text/javascript" src="//api.filestackapi.com/filestack.js"></script>



  </head>
  <body>
    <div id="get-to-address">
      <input id="location" type="textbox" value="Toronto, ON">
      <input id="locate" type="button" value="Get me there!">
    </div>

  <div id="map"> </div>


  <div id="myMapForm">
    <div class="container">
    <div class="row vertical-offset-100">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Your Map</h3>
        </div>
        <div>
          <div class="mapInformation">
            <label for="title">Map title: <%= title %></label>
          </div>
          <div class="mapInformation">
            <label for="description">Description: <%= info %></label>
          </div>
        </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Enter marker information</h3>
        </div>
          <div class="panel-body">
            <form accept-charset="UTF-8" role="form" id="save-form">
              <fieldset>

                <div class="form-group">
                  <input class="form-control" id="latitude" placeholder="Latitude" name="latitude" type="text">
              </div>
                    <div class="form-group">
                  <input class="form-control" id="longitude" placeholder="Longitude" name="longitude" type="text">
              </div>      <div class="form-group">
                  <input class="form-control" id="address" placeholder="Address" name="address" type="text">
              </div>
                <div class="form-group">
                  <input class="form-control" placeholder="Title" name="title" id="title" type="text">
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="Description" name="password" id ="description" type="text">
              </div>
              <div class="form-group">
                <input type="filepicker" data-fp-apikey="AKcdCyABqRbyyfpTFmqhmz"
onchange="alert(event.fpfile.url)">
              </div>
              <div>
                </div>
              <input class="btn btn-lg btn-success btn-block" type="submit" value="SAVE">
            </fieldset>
              </form>
          </div>
      </div>
    </div>
  </div>
</div>
</div>



    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=`${MAP_API}`%>&callback=initMap"></script>




  </body>
</html>
